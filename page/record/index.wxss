.wrap{
  padding: 10rpx 20rpx;
}
.yearPicker{
  margin: 0 auto;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-weight: bold;
  font-size: 32rpx;
}
.border{
  /*width: 200rpx;
  padding: auto 10rpx;
  border: 1rpx solid #7FFFD4;*/
}
.search{
  width: 200rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
  background: #1296db;
  color: #fff;
  margin: 20rpx auto 40rpx auto;
  border-radius: 10rpx;
}
.record{
  width: 710rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}
.record_tit{
  display: flex;
  width: 100%;
  height: 60rpx;
  background: #FFF68F; 
  margin-bottom: 10rpx;
  /*border-bottom: 1rpx solid #ccc;*/
}
.record_tit text{
  flex: 1;
  text-align: center;
  line-height: 60rpx;
  font-weight: bold;
}
.record_item{
  display: flex;
  width: 100%;
  height: 60rpx;
  margin: 10rpx 0;
  background: #87CEEB; 
  color: #fff;
  
  /*border-bottom: 1rpx solid #ccc;*/
}
.record_item text{
  flex: 1;
  text-align: center;
  line-height: 60rpx;
  
}
